<Window x:Class="task_4.Views.CalculatorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="Value1TextBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Value2TextBox" HorizontalAlignment="Left" Height="23" Margin="10,40,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="75" Click="AddButton_Click"/>
        <Button Content="Subtract" HorizontalAlignment="Left" Margin="90,70,0,0" VerticalAlignment="Top" Width="75" Click="SubtractButton_Click"/>
        <Button Content="Multiply" HorizontalAlignment="Left" Margin="170,70,0,0" VerticalAlignment="Top" Width="75" Click="MultiplyButton_Click"/>
        <Button Content="Divide" HorizontalAlignment="Left" Margin="250,70,0,0" VerticalAlignment="Top" Width="75" Click="DivideButton_Click"/>
        <TextBox x:Name="ResultTextBox" HorizontalAlignment="Left" Height="23" Margin="10,100,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>



