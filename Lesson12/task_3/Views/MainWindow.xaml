<Window x:Class="task_3.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Stopwatch" Height="200" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding ElapsedTime}" FontSize="24" HorizontalAlignment="Center" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Start" Command="{Binding StartCommand}" Width="75" Margin="5" />
                <Button Content="Stop" Command="{Binding StopCommand}" Width="75" Margin="5" />
                <Button Content="Reset" Command="{Binding ResetCommand}" Width="75" Margin="5" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>


